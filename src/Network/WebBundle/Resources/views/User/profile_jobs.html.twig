{% extends 'NetworkWebBundle:Default:edit.base.html.twig' %}

{% block edit_content %}

    {{ form_start(form) }}

       {{ form_rest(form) }}

        {% block javascripts %}

            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

            {% javascripts  'bundles/sonatacore/vendor/jquery/dist/jquery.min.js'
                            'bundles/sonataadmin/vendor/jqueryui/ui/jquery-ui.js'
                            '@NetworkWebBundle/Resources/public/js/searchSuggestor.class.js'
                            '@NetworkWebBundle/Resources/public/js/datepicker.js'
                            '@NetworkWebBundle/Resources/public/js/collectionHolder.class.js' %}

                <script type="text/javascript" src="{{ asset_url }}"></script>

            {% endjavascripts %}

            <script type="text/javascript">
                new CollectionHolder({{ form.jobs.count }}, '#{{ form.jobs.vars.id }}');
            </script>

        {% endblock %}

    {{ form_end(form) }}

{% endblock %}