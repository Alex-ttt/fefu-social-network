{% extends "NetworkWebBundle:Default:auth.base.html.twig" %}
{% block authorization %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <a class="login_authentication_button" href="{{ path('fos_user_profile_show') }}">{{ 'layout.profile'|trans({}, 'FOSUserBundle') }}</a>
        <a class="login_authentication_button" href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
    {% else %}
        {{ parent() }}
        <a class="submit_button" href="{{ path('fos_user_registration_register')  }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
        <a id="login_button" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
{% endblock %}
